<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title> <%- title %> </title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div id="header">
        <span class="title">
          Votifoto
        </span>
        <button onclick="window.location.href='/'" class="button-head" id="btnMain">
            Menu
        </button>
    </div>

      <% if (typeof alert != "undefined") { %>
        <div class="alertMessage">
            <span class="alertText">
            <%- alert %>
            </span>
        </div>
      <% } %>

    <div class="page-body horizonImage">
        <div class="verticalImage">
            <form action="/searchResource" method="post" class="verticalImage" enctype="multipart/form-data">
                <div class="betweeneur">
                    <label>Nom de l'image : </label>
                    <input type="text" name="name" placeholder="Nom de l'image" required>
                </div>
                    <input type="submit" value="Rechercher" class="button-3">
            </form>

            <% if (typeof image != "undefined") { %>
                <br>
                <p>Nom : <%= image.name %></p>
                <br>
                <a class="<%= image._id %> <%= image.name %>">Votes : <%= image.votes %> </a>
            <% } %>
        </div>

        <div class="imageColumnSearch">
            <% if (typeof image != "undefined") { %>
                <img src="images/<%= image.path %>" alt="<%= image._id %>" class="imgSizePlus">
            <% } %>
        </div>
    </div>
</body>
</html>