<html>

<head>
  <title> <%- title %> </title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>

  <div id="header">
    <span class="title">
      Votifoto
    </span>
    <button id="btnUpload" class="button-3">
      Upload image
    </button>
  </div>

  <div class="page-body">
    <table class="centreur" style="margin-bottom: 3em;">
      <tbody class="horizonImage">
        <% for(var i=0; i < lessVote.length; i++) { %>
          <tr>
            <td>
                <div class="verticalImage">
                  <span style="text-align: center"><%= lessVote[i].name %></span>
                  <img src="images/<%= lessVote[i].path %>" alt="<%= lessVote[i]._id %>" class="imgSize">
                  <div class="horizonImage">
                  <button class="button-3 halfdiv votePlusButton <%= lessVote[i].name %>" value="<%= lessVote[i]._id %>" >plus</button>
                  <button class="button-3 halfdiv voteMoinsButton <%= lessVote[i].name %>" value="<%= lessVote[i]._id %>" >moins</button>
                  </div>
                  <a class="<%= lessVote[i]._id %> <%= lessVote[i].name %> " style="text-align: center">Votes : <%= lessVote[i].votes %> </a>
                </div>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <table>
      <% for(var i=0; i < data.length; i++) { %>
         <tr>
           <!--td><%= data[i].id %></td-->
           <td><%= data[i].name %></td>
           <td>
            <img src="images/<%= data[i].path %>" alt="<%= data[i]._id %>" class="imgSize">
            <a class="<%= data[i]._id %> <%= data[i].name %>">Votes : <%= data[i].votes %> </a>
           </td>
         </tr>
      <% } %>
    </table>
  </div>
</body>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script type="text/javascript" src="javascripts/index.js"></script>

